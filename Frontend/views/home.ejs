<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - BookMyHotel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/home.css">
</head>
<body>
    
    <div class="container">

        <!-- Navigation Bar -->
        <%- include("navbar.ejs") %>

        <!-- Hero Section -->
        <div class="heroSection">

            <form action="/browseallhotels" action="get">
                <div class="location">
                    <img src="/images/location.png" alt="">
                    <input type="text" name="userLocation" id="" placeholder="Enter Location" required>
                </div>
                <div class="datesandPerson">
                    <label for="">From:</label>
                    <input type="date" name="checkInDate" id="" required>
                    <label for="">To:</label>
                    <input type="date" name="checkOutDate" id="" required>
                    <div class="person">
                        <img src="/images/user.png" alt="">
                        <input type="text" placeholder="1Room , 2Adults">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Search Hotels</button>
            </form>

        </div>

        <!-- Popular Destinations -->
        <div class="popularSection">
            <h1>Popular Destinations</h1>
            <div class="dest">
                <a href="/browseallhotels?userLocation=manali" class="dcard">
                    <p>676 properties</p>
                    <h2>Manali</h2>
                </a>
                <a href="/browseallhotels?userLocation=goa" class="dcard">
                    <p>1023 properties</p>
                    <h2>Goa</h2>
                </a>
                <a href="/browseallhotels?userLocation=bangalore" class="dcard">
                    <p>4010 properties</p>
                    <h2>Bangalore</h2>
                </a>
                <a href="/browseallhotels?userLocation=jaipur" class="dcard">
                    <p>456 properties</p>
                    <h2>Jaipur</h2>
                </a>
                <a href="/browseallhotels?userLocation=pattaya" class="dcard">
                    <p>789 properties</p>
                    <h2>Pattaya</h2>
                </a>
            </div>
        </div>
        

        <!-- Customer Reviews -->
        

        <!-- FAQs Section -->
        <div class="faq-section">
            <h1>Frequently Asked Questions</h1>
            <div class="faq-card">
                <div class="question">
                    <h3 id="faq-question"></h3>
                    <img src="/images/down-arrow.png" alt="">
                </div>
                <p id="answer"></p>
            </div>
            <div class="faq-card">
                <div class="question">
                    <h3 id="faq-question"></h3>
                    <img src="/images/down-arrow.png" alt="">
                </div>
                <p id="answer"></p>
            </div>
