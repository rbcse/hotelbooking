<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - BookMyHotel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/home.css">
</head>
<body>

        <!-- Navigation Bar -->
        <div class="navbar">
            <a href="/"><h1>BookMyHotel</h1></a>
            <nav>
                <a href="/about">About</a>
                <a href="/browseallhotels">Browse Hotels</a>
                <a href="/login"><%= loginVariable %></a>
            </nav>
            <div class="searchBar"> 
                <input type="search" name="searchInput" id="" placeholder="location">
                <button type="submit" class="btn btn-success">Search</button>
            </div>
            <img src="/images/menu.png" id="menu" alt="">
            <img src="/images/close.png" id="close" alt="">
        </div>

        <!-- Dummy Container -->
        <div class="dummyCont">
            <a href="/about">About</a>
            <a href="/browseallhotels?all">Browse Hotels</a>
            <a href="/login"><%= loginVariable %></a>
            <input type="search" name="searchInput" id="" placeholder="location">
            <button type="submit" class="btn btn-success">Search</button>
        </div>


    <script>
        let menuIcon = document.querySelector("#menu");
        let closeIcon = document.querySelector("#close");
        let dummyCont = document.querySelector(".dummyCont");

        menuIcon.addEventListener("click", () => {
            closeIcon.style.display = "block";
            closeIcon.style.width = "10%";
            closeIcon.style.zIndex = "100";
            menuIcon.style.display = "none";
            dummyCont.classList.add("show");
        });

        closeIcon.addEventListener("click", () => {
            menuIcon.style.display = "block";
            menuIcon.style.width = "10%";
            closeIcon.style.display = "none";
            dummyCont.classList.remove("show");
            menuIcon.style.zIndex = "100";
        });

        window.addEventListener("resize", () => {
            if (window.innerWidth > 450) {
                menuIcon.style.display = "none";
                closeIcon.style.display = "none";
                dummyCont.classList.remove("show");
            } else {
                menuIcon.style.display = "block";
            }
        });
 
    </script>

</body>
</html>